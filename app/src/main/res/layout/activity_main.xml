<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/newsfondo"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.activitys.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="10dp"
        android:text="Bienvenido a mi app"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/semi_transparent"
            android:orientation="vertical"
            android:padding="20dp"
            tools:context=".MainActivity">

            <EditText
                android:id="@+id/etx_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="5dp"
                android:hint="Usuario"
                android:padding="10dp"
                android:textColorHint="@color/white" />


            <EditText
                android:id="@+id/etx_pass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="10dp"
                android:hint="ContraseÃ±a"
                android:padding="10dp"
                android:textColorHint="@color/white" />

            <Button
                android:id="@+id/btn_login"
                android:layout_width="match_parent"
                android:layout_height="@dimen/btn_height"
                android:layout_margin="10dp"
                android:backgroundTint="@color/red"
                android:drawableRight="@drawable/baseline_login_24"
                android:text="@string/btn_login_text"
                android:textSize="@dimen/text_size_18" />

        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>